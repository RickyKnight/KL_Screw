<h1>Listing trades</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trades.each do |trade| %>
  <tr>
    <td><%= trade.name %></td>
    <td><%= link_to 'Show', trade %></td>
    <td><%= link_to 'Edit', edit_trade_path(trade) %></td>
    <td><%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Trade', new_trade_path %> |
<%= link_to 'New Job', new_job_path %> 


<%= form_tag new_job_path, method: :get do %>
  <%= select_tag :trade_id, options_from_collection_for_select(Trade.all, :id, :name) %>
  <%= submit_tag "New Job", name: nil %>
<% end %>