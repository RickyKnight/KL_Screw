<h1>Listing answers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Question</th>
    <th>Option</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.name %></td>
    <td><%= answer.user_id %></td>
    <td><%= answer.question_id %></td>
    <td><%= answer.option_id %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Answer', new_answer_path %>



<h1>Completed Questions</h1>

<% form_tag complete_jobs_path, :method => :put do %>
  <% @job.questions.each do |question| %>
    <li>
      <%= question.content %>
      <ul> <%= option.content %> </ul>
    </li>
  <% end %>
<% end %>
