<%= simple_nested_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <%= f.fields_for :questions do |builder| %>
    <%= render 'question_fields', :f => builder %>
  <% end %> </br>
  <%= f.link_to_add "Add Question", :questions %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>