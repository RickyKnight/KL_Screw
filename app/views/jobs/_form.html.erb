<%= simple_nested_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <!-- <div><%= f.hidden_field :trade_ids %></div> -->
 
  <div class="form-inputs">
    <%= f.input :name, label: 'Job Name' %> </br>
    <%= f.association :trades, as: :check_boxes %>
    Trade category not present?
    <%= link_to 'Create Trade', new_trade_path %>
  </div>

  <%= f.fields_for :questions do |builder| %>
    <%= render '/jobs/question_fields', :f => builder %>
  <% end %> </br>
  <%= f.link_to_add "Add Question", :questions %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>